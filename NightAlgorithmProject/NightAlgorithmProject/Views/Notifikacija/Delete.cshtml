@model NightAlgorithm.Models.Notifikacija

@{
    ViewData["Title"] = "Obriši Notifikaciju";
}

<h1>Obriši</h1>

<h3>Da li ste sigurni da želite obrisati notifikaciju?</h3>
<div>
    <h4>Notifikacija</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.naziv)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.naziv)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.tekst)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.tekst)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Obriši" class="btn btn-danger" /> |
        <a asp-action="Index">Nazad na listu</a>
    </form>
</div>
